# OpenAI API Key - Required for AI compliance analysis
OPENAI_API_KEY=your_openai_api_key_here

# Flask Environment (development/production)
FLASK_ENV=production

# API Port (default: 5000)
PORT=5000

# Frontend API Base URL (for production deployment)
# For DigitalOcean App Platform: https://your-backend-app-name-xxxxx.ondigitalocean.app/api
# For Docker Droplet: http://your-droplet-ip:5000/api
VITE_API_BASE_URL=http://localhost:5000/api

# Security and Performance
PYTHONUNBUFFERED=1
WEB_CONCURRENCY=4
GUNICORN_TIMEOUT=120
